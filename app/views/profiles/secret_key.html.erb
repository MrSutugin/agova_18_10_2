<%= tag.div class: 'row' do %>
  <%= tag.div class: 'col-xl-4' do %>
    <%= tag.div class: 'card mb-4' do %>
      <%= tag.div class: 'card-body' do %>
        <%= tag.h4 class: 'fs-base fw-semibold mb-3' do %>
          <%= link_to dashboard_path, class: 'link d-flex align-items-center fw-semibold' do %>
            <i class="uil uil-arrow-left"></i>
            <%= tag.span class: 'ms-2 text-truncate' do %>
              Назад
            <% end %>
          <% end %>
        <% end %>
        <%= render 'nav' %>
      <% end %>
    <% end %>
  <% end %>
  <%= tag.div class: 'col-xl-8' do %>
    <%= tag.div class: 'card mb-4' do %>
      <%= tag.div class: 'card-body' do %>
        <%= tag.h4 'Секретный ключ', class: 'fs-base fw-semibold mb-3' %>
        <%= tag.div class: '' do %>
          <%= tag.label 'Секретный ключ', class: "form-label" %>
          <%= tag.input  class: 'form-control', value: current_account.profile.secret_key, readonly: 'readonly' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
