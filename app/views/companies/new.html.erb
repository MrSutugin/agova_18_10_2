<%= tag.div class: 'row' do %>
  <%= tag.div class: 'col-xl-4' do %>
    <%= tag.div class: 'card mb-4' do %>
      <%= tag.div class: 'card-body' do %>
        <%= tag.h4 class: 'fs-base fw-semibold mb-0' do %>
          <%= link_to companies_path, class: 'link d-flex align-items-center fw-semibold' do %>
            <i class="uil uil-arrow-left"></i>
            <%= tag.span class: 'ms-2 text-truncate' do %>
              Назад
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= tag.div class: 'col-xl-8' do %>
    <%= tag.div class: 'card mb-4' do %>
      <%= render 'form', company: @company, form_title: 'Создание товарищества' %>
    <% end %>
  <% end %>
<% end %>
