<%= form_for authentication_scope, url: login_path, html: { class: "login-form" } do |f| %>
  <% if flash[:error] -%>
    <div class="alert alert-danger error-bg">
      <p><%= flash[:error] %></p>
    </div>
  <% end -%>
  <%= hook("auth.login.form.before") %>
  <%= render "form", f: f %>
  <%= hook("auth.login.form.after") %>
<% end %>
